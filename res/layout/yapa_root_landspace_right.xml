<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/yapa_rootview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <com.yapa.internal.layout.YapaStackLayout
        android:id="@+id/com_yapa_internal_layout_YapaStackLayout"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.yapa.internal.view.YapaView
        android:id="@+id/com_yapa_internal_view_YapaView"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
