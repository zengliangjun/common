<?xml version="1.0" encoding="utf-8"?>
<com.yapa.widget.SpaceSystemLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:yapa="http://schemas.android.com/apk/res-auto"
    android:id="@+id/space_line_group"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

	<ImageView
	    android:id="@+id/yapa_spacecontrol"
	    android:layout_width="30dp"
	    android:layout_height="30dp"
	    android:src="@drawable/space_exit" />

	<ImageView
	    android:id="@+id/yapa_camera_projection"
	    android:layout_width="30dp"
	    android:layout_height="30dp"
	    android:src="@drawable/space_perespective" />

    <ImageView
	    android:id="@+id/yapa_camera_rotation"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/space_camera" />

	<ImageView
	    android:id="@+id/yapa_calibration"
	    android:layout_width="30dp"
	    android:layout_height="30dp"
	    android:src="@drawable/space_recenter" />

    <ImageView
	    android:id="@+id/yapa_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/space_back" />

    <ImageView
	    android:id="@+id/yapa_fullscreen"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/fullscreen_locked" />

    <ImageView
	    android:id="@+id/yapa_group"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/space_group" />

</com.yapa.widget.SpaceSystemLayout>
