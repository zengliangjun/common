<?xml version="1.0" encoding="utf-8"?>
<com.yapa.widget.SpaceGroupLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:yapa="http://schemas.android.com/apk/res-auto"
    android:id="@+id/space_line_group"
    android:layout_width="30dp"
    android:layout_height="30dp"
    yapa:lineDirection="topvertical" >

    <ImageView
	    android:id="@+id/yapa_system"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/space_system" />

    <ImageView
	    android:id="@+id/yapa_screen"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/space_screen" />

    <ImageView
	    android:id="@+id/yapa_size"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/space_size" />

</com.yapa.widget.SpaceGroupLayout>